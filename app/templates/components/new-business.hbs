<button class="btn btn-success"{{action "toggleModal"}}>Add a Business</button>

{{#if isShowingModal}}
  {{#modal-dialog close="toggleModal"
                  targetAttachment="center"
                  translucentOverlay=true}}
  <h1>New Business</h1>
  <div>
    <form {{action 'saveBusiness' on="submit"}}>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name" required="required"}}
      </div>

      <div class="form-group">
        <label for="hours">Hours</label>
        {{input value=hours id="hours" required="required"}}
      </div>

      <div class="form-group">
        <label for="addr1">Street Address</label>
        {{input value=addr1 id="addr1" required="required"}}
      </div>

      <div class="form-group">
        <label for="addr2">Apt/Suite/Floor</label>
        {{input value=addr2 id="addr2"}}
      </div>

      <div class="form-group">
        <label for="city">City</label>
        {{input value=city id="city" required="required"}}
      </div>

      <div class="form-group">
        <label for="state">State</label>
        {{input value=state id="state" required="required"}}
      </div>

      <div class="form-group">
        <label for="zip">Zipcode</label>
        {{input value=zip id="zip" required="required"}}
      </div>

      <div class="form-group">
        <label for="phone">Phone Number</label>
        {{input value=phone id="phone" required="required"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <div class="form-group">
        <label for="yearsInBusiness">Years in Business</label>
        {{input value=yearsInBusiness id="yearsInBusiness"}}
      </div>

      <div class="form-group">
        <label for="description">Describe your Business</label>
        {{textarea value=description id="description" required="required"}}
      </div>

      <div class="form-group">
        <label for="website">Website</label>
        {{input value=website id="website"}}
      </div>

      <button class="btn btn-success">Save</button>
    </form>
  </div>
  {{/modal-dialog}}
{{/if}}
