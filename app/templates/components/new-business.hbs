<button class="btn btn-success biz-button"{{action "toggleModal"}}>create profile</button>
<br><br>

{{#if isShowingModal}}
  {{#modal-dialog close="toggleModal"
    targetAttachment="center"
    translucentOverlay=true}}
  <h1 class="new-biz-head">New Business</h1>
  <div class="new-biz-form">
    <form {{action 'saveBusiness' on="submit"}}>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name" required="required" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="hours">Hours</label>
        {{input value=hours id="hours" required="required" class="form-control"}}
      </div>


      <div class="form-group">
        <label for="addr1">Street Address</label>
        {{input value=addr1 id="addr1" required="required" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="addr2">Apt/Suite/Floor</label>
        {{input value=addr2 id="addr2" class="form-control"}}
      </div>

      <div class="row">
        <div class="col-sm-5">
          <div class="form-group">
            <label for="city">City</label>
            {{input value=city id="city" required="required" class="form-control"}}
          </div>
        </div>

        <div class="col-sm-2">
          <div class="form-group">
            <label for="state">State</label>
            {{input value=state id="state" required="required" class="form-control"}}
          </div>
        </div>

        <div class="col-sm-2">
          <div class="form-group">
            <label for="zip">Zipcode</label>
            {{input value=zip id="zip" required="required" class="form-control"}}
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="phone">Phone Number</label>
        {{input value=phone id="phone" required="required" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="yearsInBusiness">Years in Business</label>
        {{input value=yearsInBusiness id="yearsInBusiness" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="description">Describe your Business</label>
        {{textarea value=description id="description" required="required" class="form-control"}}
      </div>

      <div class="form-group">
        <label for="website">Website</label>
        {{input value=website id="website" class="form-control"}}
      </div>

      <button type="submit" class="btn btn-success">Save</button>
    </form>
  </div>
  {{/modal-dialog}}
{{/if}}
