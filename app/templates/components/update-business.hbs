<button class="update-btn btn btn-success"{{action "toggleModal"}}>update business</button>

{{#if isShowingModal}}
  {{#modal-dialog close="toggleModal"
                  targetAttachment="center"
                  translucentOverlay=true}}
  <div id="edit-modal">
    <h1 class="update-title">Update {{business.name}}'s Profile</h1>
    <form class="update-biz-form">
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=business.name id="name" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="hours">Hours</label>
        {{input value=business.hours id="hours" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="addr1">Street Address</label>
        {{input value=business.addr1 id="addr1" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="addr2">Apt/Suite/Floor</label>
        {{input value=business.addr2 id="addr2" class="form-control" class="form-control" class="form-control"}}
      </div>
      <div class="row">
        <div class="col-sm-5">
          <div class="form-group">
            <label for="city">City</label>
            {{input value=business.city id="city" class="form-control" class="form-control"}}
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label for="state">State</label>
            {{input value=business.state id="state" class="form-control"}}
          </div>
        </div>
        <div class="col-sm-2">
          <div class="form-group">
            <label for="zip">Zipcode</label>
            {{input value=business.zip id="zip" class="form-control"}}
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-3">
          <div class="form-group">
            <label for="latitude">Latitude</label>
            {{input value=business.latitude id="latitude" class="form-control"}}
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <label for="longitude">Longitude</label>
            {{input value=business.longitude id="longitude" class="form-control"}}
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="phone">Phone Number</label>
        {{input value=business.phone id="phone" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=business.image id="image" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="yearsInBusiness">Years in Business</label>
        {{input value=business.yearsInBusiness id="yearsInBusiness" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="description">Describe your Business</label>
        {{textarea value=business.description id="description" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="website">Website</label>
        {{input value=business.website id="website" class="form-control"}}
      </div>
      <button {{action 'update' business}}>Save Updates</button>
      <button id="cancelBtn" {{action 'cancelBusinessForm'}}>Cancel</button>
  </form>
  </div>
  {{/modal-dialog}}
{{/if}}
