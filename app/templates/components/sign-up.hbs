{{#if addBusinessButton}}
  {{new-business saveBusiness="saveBusiness" model=model}}
{{else}}
  <div class="biz-description">
    <h4>Administrator sign in</h4>
    <form {{action 'signUp' on="submit"}}>
      <div class="form-group">
        <label for="email">Email</label>
        {{input value=email id="email" class="form-control" required="required"}}
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        {{input value=password id="password" class="form-control"  required="required"}}
      </div>
      <button class="btn btn-success" type=submit>sign in</button>
    </form>
  </div>
{{/if}}
